<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.newsapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/smartnews"
        android:label="@string/app_name"
        android:roundIcon="@drawable/smartnews"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewsApp">
        <activity android:name=".SplashScreen" android:screenOrientation="locked" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:screenOrientation="locked" android:windowSoftInputMode="stateHidden"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>